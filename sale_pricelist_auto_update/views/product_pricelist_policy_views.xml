<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_pricelist_policy_form_view">
        <field name="name">Product Pricelist Policy Form View</field>
        <field name="model">product.pricelist.policy</field>
        <field name="arch" type="xml">
            <form string="Policy Form">
                <sheet>
                        <group string="Visitor Information">
                            <group>
                                <field name="tag"/>
                            </group>
                            <group>
                                <field name="pricelist_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_pricelist_policy_list" model="ir.ui.view">
        <field name="name">Product Pricelist Policy List View</field>
        <field name="model">product.pricelist.policy</field>
            <field name="arch" type="xml">
                <tree string="Pricelist Policy">
                    <field name="tag"/>
                    <field name="pricelist_ids" widget="many2many_tags" />
              </tree>
            </field>
    </record>

    <record model="ir.ui.view" id="product_pricelist_policy_search_view">
        <field name="name">Product Pricelist Policy Search View</field>
        <field name="model">product.pricelist.policy</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tag"/>
                    <field name="pricelist_ids"/>
                </search>
            </field>
    </record>

    <record model="ir.actions.act_window" id="product_pricelist_policy_action">
        <field name="name">Product Pricelist Policies</field>
        <field name="res_model">product.pricelist.policy</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="product_pricelist_policy_menu" name="Pricelist Policies" parent="sale.menu_product_pricelist_main"
              action="product_pricelist_policy_action" groups="sales_team.group_sale_manager"/>

</odoo>
