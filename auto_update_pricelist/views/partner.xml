<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_inherit_yearly_sales" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.yearly.sales</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Yearly Sales History">
                    <field name="yearly_sales_history_ids">
                        <tree string="Yearly Sales" editable="bottom">
                            <field name="partner_id" />
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="sales_amount" />
                         </tree>
                    </field>
                    <group>
                        <field name="company_currency_id" invisible="True"/>
                        <field name="yearly_purchase_total" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
