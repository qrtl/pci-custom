<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.configurator.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_configurator.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[5]" position="after">
                <page string="Config. Mapping" name="config_map" attrs="{'invisible': [('config_ok','=',False)]}">
                    <separator colspan="4" string="Attriute Value - Product Mapping"/>
                    <field name="attribute_value_set_ids"
                           attrs="{'readonly': [('attribute_line_ids','=',[])]}">
                        <tree string="Attribute Value Set" editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="value_ids" widget="many2many_tags" context="{'_cfg_product_tmpl_id': parent.id}"/>
                            <field name="product_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
