<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_invoice_document_inherit_additional_info"
        inherit_id="account.report_invoice_document" priority="20"
    >
        <xpath expr="//div[@t-field='o.partner_id']" position="attributes">
            <attribute name="t-options">{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}</attribute>
        </xpath>
        <xpath expr="//div[@t-field='o.partner_id']" position="after">
            <div t-if="o.partner_id.additional_info1"><span t-field="o.partner_id.additional_info1"/></div>
            <div t-if="o.partner_id.additional_info2"><span t-field="o.partner_id.additional_info2"/></div>
            <div t-if="o.partner_id.additional_info3"><span t-field="o.partner_id.additional_info3"/></div>
        </xpath>
        <xpath expr="//div[@t-field='o.partner_shipping_id']" position="attributes">
            <attribute name="t-options">{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}</attribute>
        </xpath>
        <xpath expr="//div[@t-field='o.partner_shipping_id']" position="after">
            <div t-if="o.partner_shipping_id.additional_info1"><span t-field="o.partner_shipping_id.additional_info1"/></div>
            <div t-if="o.partner_shipping_id.additional_info2"><span t-field="o.partner_shipping_id.additional_info2"/></div>
            <div t-if="o.partner_shipping_id.additional_info3"><span t-field="o.partner_shipping_id.additional_info3"/></div>
        </xpath>
    </template>
</odoo>
