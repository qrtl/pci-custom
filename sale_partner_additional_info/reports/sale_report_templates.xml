<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_saleorder_document_inherit"
        inherit_id="sale.report_saleorder_document"
    >
        <xpath expr="//div[@t-field='doc.partner_invoice_id']" position="attributes">
            <attribute name="t-options">{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}</attribute>
        </xpath>
        <xpath expr="//div[@t-field='doc.partner_invoice_id']" position="after">
            <div t-if="doc.partner_invoice_id.additional_info1"><span t-field="doc.partner_invoice_id.additional_info1"/></div>
            <div t-if="doc.partner_invoice_id.additional_info2"><span t-field="doc.partner_invoice_id.additional_info2"/></div>
            <div t-if="doc.partner_invoice_id.additional_info3"><span t-field="doc.partner_invoice_id.additional_info3"/></div>
        </xpath>
        <xpath expr="//div[@t-field='doc.partner_shipping_id']" position="attributes">
            <attribute name="t-options">{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}</attribute>
        </xpath>
        <xpath expr="//div[@t-field='doc.partner_shipping_id']" position="after">
            <div t-if="doc.partner_shipping_id.additional_info1"><span t-field="doc.partner_shipping_id.additional_info1"/></div>
            <div t-if="doc.partner_shipping_id.additional_info2"><span t-field="doc.partner_shipping_id.additional_info2"/></div>
            <div t-if="doc.partner_shipping_id.additional_info3"><span t-field="doc.partner_shipping_id.additional_info3"/></div>
        </xpath>
        <xpath expr="//div[@t-field='doc.partner_id']" position="attributes">
            <attribute name="t-options">{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}</attribute>
        </xpath>
        <xpath expr="//div[@t-field='doc.partner_id']" position="after">
            <div t-if="doc.partner_id.additional_info1"><span t-field="doc.partner_id.additional_info1"/></div>
            <div t-if="doc.partner_id.additional_info2"><span t-field="doc.partner_id.additional_info2"/></div>
            <div t-if="doc.partner_id.additional_info3"><span t-field="doc.partner_id.additional_info3"/></div>
        </xpath>
    </template>
</odoo>
